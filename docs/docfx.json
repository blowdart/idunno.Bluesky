{
    "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../src",
                    "files": [
                        "idunno.AtProto.Types/bin/Release/**/idunno.AtProto.Types.dll",
                        "idunno.AtProto/bin/Release/**/idunno.AtProto.dll",
                        "idunno.AtProto.OAuthCallback/bin/Release/**/idunno.AtProto.Callback.dll",
                        "idunno.Bluesky/bin/Release/**/idunno.Bluesky.dll"
                    ]
                }
            ],
            "dest": "api",
            "outputFormat": "apiPage",
            "disableDefaultFilter": false,
            "properties": {
                "TargetFramework": "net10.0"
            }
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "**/*.{md,yml}"
                ],
                "exclude": [
                    "_site/**"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "**/images/**",
                    "**/media/**",
                    "**/code/*.cs"
                ]
            },
            {
                "files": [
                    "favicon.ico",
                    "favicon.png",
                    "docicon.png"
                ]
            }
        ],
        "output": "_site",
        "template": [
            "default",
            "modern"
        ],
        "globalMetadata": {
            "_appName": "idunno.Bluesky",
            "_appTitle": "idunno.Bluesky Documentation",
            "_appFooter": "&copy; Barry Dorrans",
            "_enableSearch": true,
            "_appFaviconPath": "favicon.png",
            "_appLogoPath": "docicon.png",
            "_enableNewTab": "true",
            "pdf": false
        }
    }
}
